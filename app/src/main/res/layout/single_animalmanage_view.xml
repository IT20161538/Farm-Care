<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/single_viewAnimal_section"
        android:layout_width="125dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="@string/single_viewAnimal_section"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/single_viewAnimal_type"
        android:layout_width="125dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:text="@string/single_viewAnimal_type"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/single_viewAnimal_section" />

    <TextView
        android:id="@+id/single_viewAnimal_dob"
        android:layout_width="125dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:text="@string/single_viewAnimal_dob"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/single_viewAnimal_type" />

    <TextView
        android:id="@+id/single_viewAnimal_lvd"
        android:layout_width="125dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:text="@string/single_viewAnimal_lvd"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/single_viewAnimal_dob" />

    <TextView
        android:id="@+id/single_viewAnimal_dvd"
        android:layout_width="125dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:text="@string/single_viewAnimal_dvd"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/single_viewAnimal_lvd" />

    <TextView
        android:id="@+id/single_viewAnimal_age"
        android:layout_width="125dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:text="@string/single_viewAnimal_age"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/single_viewAnimal_dvd" />

    <TextView
        android:id="@+id/tv_singleAnimal_section"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_marginEnd="36dp"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/single_viewAnimal_section"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_singleAnimal_type"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_marginEnd="36dp"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/single_viewAnimal_type"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_singleAnimal_dob"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_marginEnd="36dp"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/single_viewAnimal_dob"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_singleAnimal_lvd"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_marginEnd="36dp"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/single_viewAnimal_lvd"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_singleAnimal_dvd"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_marginEnd="36dp"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/single_viewAnimal_dvd"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_singleAnimal_age"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_marginEnd="36dp"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/single_viewAnimal_age"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>